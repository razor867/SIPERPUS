@model SIPERPUS.Models.Mahasiswa

@{
    ViewData["Title"] = ViewData["title"];
}

<h3>@ViewData["title_page"]</h3>

<div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered" style="width: 50%;">
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Nama</td>
                    <td>@Html.DisplayFor(model => model.nama)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Jurusan</td>
                    <td>@ViewData["jurusan_name"]</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">NPM</td>
                    <td>@Model.npm.ToString()</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Alamat</td>
                    <td>@Html.DisplayFor(model => model.alamat)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Created at</td>
                    <td>@Model.created_at.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Created by</td>
                    <td>@Html.DisplayFor(model => model.created_by)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Updated at</td>
                    <td>@Model.updated_at.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Updated by</td>
                    <td>@Html.DisplayFor(model => model.updated_by)</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="mt-2" style="width: 50%;">
    <a asp-action="Edit" class="btn btn-primary float-end" asp-route-id="@Model?.id"><i class="fas fa-edit"></i>
        Edit</a>
    <a asp-action="Index" class="btn btn-secondary float-end me-2"><i class="fas fa-long-arrow-alt-left"></i>
        Back</a>
</div>
