@model SIPERPUS.Models.Peminjaman

@{
    ViewData["Title"] = ViewData["title"];
}

<h3>@ViewData["title_page"]</h3>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="mb-3 row">
                <label for="idmahasiswa" class="col-sm-2 col-form-label">Mahasiswa</label>
                <div class="col-sm-10">
                    <select asp-for="idmahasiswa" class="form-control" asp-items="@ViewBag.dropdownMhs">
                        <option value="">Pilih Mahasiswa</option>
                    </select>
                    <span asp-validation-for="idmahasiswa" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="idbuku" class="col-sm-2 col-form-label">Buku</label>
                <div class="col-sm-10">
                    <select asp-for="idbuku" class="form-control" asp-items="@ViewBag.dropdownBuku">
                        <option value="">Pilih Buku</option>
                    </select>
                    <span asp-validation-for="idbuku" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="tgl_pinjam" class="col-sm-2 col-form-label">Tgl Pinjam</label>
                <div class="col-sm-10">
                    <input asp-for="tgl_pinjam" type="date" class="form-control" />
                    <span asp-validation-for="tgl_pinjam" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="tgl_pulang" class="col-sm-2 col-form-label">Tgl Pulang</label>
                <div class="col-sm-10">
                    <input asp-for="tgl_pulang" type="date" class="form-control" />
                    <span asp-validation-for="tgl_pulang" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="qty" class="col-sm-2 col-form-label">Qty</label>
                <div class="col-sm-10">
                    <input asp-for="qty" class="form-control" />
                    <span asp-validation-for="qty" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary float-end"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-secondary float-end me-2"><i class="fas fa-long-arrow-alt-left"></i>
                Back</a>
        </form>
    </div>
</div>
<br>
@await Html.PartialAsync("~/Views/Shared/_Alert.cshtml")
@Html.Raw(ViewBag.Alert)

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
