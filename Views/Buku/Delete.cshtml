@model SIPERPUS.Models.Buku

@{
    ViewData["Title"] = ViewData["title"];
}

<h3>@ViewData["title_page"]</h3>

<h5>Are you sure you want to delete this data?</h5>
<div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered" style="width: 50%;">
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Nama</td>
                    <td>@Html.DisplayFor(model => model.nama)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Penerbit</td>
                    <td>@Html.DisplayFor(model => model.penerbit)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Pengarang</td>
                    <td>@Html.DisplayFor(model => model.pengarang)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Tahun</td>
                    <td>@Html.DisplayFor(model => model.tahun)</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Kategori</td>
                    <td>@ViewData["kategori_buku_name"]</td>
                </tr>
                <tr>
                    <td class="bg-secondary" style="color:#fff; width: 20%;">Rak</td>
                    <td>@Html.DisplayFor(model => model.lokasi_rak)</td>
                </tr>
            </table>
        </div>
    </div>
    <div style="width: 50%;">
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <button type="submit" class="btn btn-danger float-end"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary float-end me-2"><i class="fas fa-long-arrow-alt-left"></i>
                Back</a>
        </form>
    </div>
</div>
