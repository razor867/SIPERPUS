<table class="table">
    <thead>
        <tr>
            <th>
                Nama
            </th>
            <th>
                Updated at
            </th>
            <th>
                Updated by
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int iter = 0;
        }
        @foreach (var item in Model.KategoriBukus)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nama)
                </td>
                <td>
                    @item.updated_at.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.updated_by)
                </td>

                <td>
                    <a asp-action="KategoriEdit" class="btn btn-sm btn-outline-primary" title="Edit"
                    asp-route-id="@item.id"><i class="fas fa-edit"></i></a> |
                    <a asp-action="KategoriDetails" class="btn btn-sm btn-outline-primary" title="Details"
                    asp-route-id="@item.id"><i class="fas fa-info-circle"></i></a> |
                    <a asp-action="KategoriDelete" class="btn btn-sm btn-outline-danger" title="Delete"
                    asp-route-id="@item.id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            iter++;
        }
    </tbody>
</table>