@model SIPERPUS.ViewModel.KategoriBukuViewModel
@{
    ViewData["Title"] = ViewData["title"];
}

<h3>@ViewData["title_page"]</h3>

<p class="mt-3">
    <a asp-action="KategoriCreate" class="btn btn-primary"><i class="fas fa-plus"></i> Add</a>
</p>
@await Html.PartialAsync("~/Views/Shared/_Alert.cshtml")
@Html.Raw(ViewBag.Alert)
